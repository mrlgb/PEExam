<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/x3" />
            <solid android:color="@color/gray" />
            <stroke android:width="1.0px" android:color="@color/gray" />
            <gradient android:startColor="@color/white" android:endColor="@color/white" android:angle="270.0" android:centerY="2.0" android:centerColor="@color/white" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/x3" />
                <solid android:color="@color/gray" />
                <stroke android:width="1.0px" android:color="@color/gray" />
                <gradient android:startColor="@color/title" android:endColor="@color/title" android:angle="270.0" android:centerY="2.0" android:centerColor="@color/title" />
            </shape>
        </clip>
    </item>
</layer-list>