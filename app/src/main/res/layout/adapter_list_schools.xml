<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/y35"
    android:background="@drawable/recycleview_item_pressed"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/adapter_list_schools_iv_comein"
        android:layout_width="@dimen/x20"
        android:layout_height="@dimen/x20"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x10"
        android:scaleType="fitXY"
        android:src="@mipmap/comein" />

    <TextView
        android:id="@+id/adapter_list_school_tv_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x20"
        android:layout_toLeftOf="@+id/adapter_list_schools_iv_comein"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/x14" />

    <LinearLayout
        android:id="@+id/adapter_list_schools_ll_school"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x20"
        android:layout_toLeftOf="@+id/adapter_list_school_tv_people"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adapter_list_school_iv_image"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x30"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_school" />

        <TextView
            android:id="@+id/adapter_list_schools_tv_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x5"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/x14" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_alignParentBottom="true"
        android:background="@color/line" />
</RelativeLayout>